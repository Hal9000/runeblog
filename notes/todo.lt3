<div style="font-family: verdana">
.def sublist
  title = _data
  var, title = title.split(" ", 2)
  lines = _body.to_a
  lines.map! do |line|
    line = line.chomp
    line = "<font color=red>#{line[1..-1]}</font>" if line[0] == "=" || line[0] == "!"
    line = "<li>#{line}</li>"
  end
  text = lines.join("\n")
  text = "&nbsp;&nbsp;<b>#{title}</b><br><ul>" + text + "</ul>"
  setvar var, text
.end

.func split
  param.dup.gsub!(" || ", "\n")
.end

.func dd
   "$$" + param
.end

