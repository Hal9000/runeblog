#!/usr/bin/env ruby

require 'runeblog'

lib = RuneBlog::Path

files = Dir["lib/*.rb"]
result = true
files.each do |f|
  result &&= system("ruby -c #{f}")
end

exit unless result

system("cp lib/* #{lib}/")

# Exception in dir structure
cmd = "cp bin/* #{lib.sub(/lib$/, "bin/")}"
puts cmd
system(cmd)
puts
